# --- Pixload Darkroom Configuration ---
# The master token to protect the API
PIXLOAD_IMAGE_TOKEN=change-me-to-something-secure

# --- Hardware Limits (Docker) ---
PIXLOAD_CPU_LIMIT=2
PIXLOAD_MEMORY_LIMIT=2G
PIXLOAD_TMPFS_SIZE=2g

# --- Storage Configuration (S3 / R2 / MinIO) ---
STORAGE_PROVIDER=r2
S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
PUBLIC_BASE_URL=https://cdn.yourdomain.com

# --- Performance Tuning ---
# Recommended: 1 thread per process if running behind a WSGI server like Uvicorn
MAGICK_THREAD_LIMIT=1
OMP_NUM_THREADS=1

# --- Security Limits ---
# Max upload size in MB
MAX_UPLOAD_SIZE_MB=100
# Process timeout in seconds
PROCESS_TIMEOUT_SEC=60
